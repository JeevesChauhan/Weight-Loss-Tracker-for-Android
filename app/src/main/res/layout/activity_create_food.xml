<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateFood">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerInParent="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new Food"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>
    <EditText
        android:id="@+id/create_food_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/create_food_calories"
        android:layout_marginBottom="10dp"
        android:hint="name"/>
    <EditText
        android:id="@+id/create_food_calories"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="kCal"
        android:inputType="number"
        android:layout_above="@id/create_food_create"
        android:layout_marginBottom="40dp"/>
    <Button
        android:id="@+id/create_food_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/create_food_back"
        android:textColor="@android:color/background_light"
        android:background="@drawable/button"
        android:layout_marginBottom="10dp"
        android:text="Create"/>
        <Button
            android:id="@+id/create_food_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_light"
            android:background="@drawable/button"
            android:text="back"/>
    </RelativeLayout>

</RelativeLayout>